<UserControl x:Class="WhiskyTest.View.CategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WhiskyTest.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label Content="{Binding Title}"></Label>
        <ListView x:Name="PhraseSetsListView" ItemsSource="{Binding PhraseSets}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Title}" MouseDown="Label_MouseDown"></Label>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</UserControl>
